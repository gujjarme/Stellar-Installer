<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.web.WebView?>
<AnchorPane prefHeight="593.0" prefWidth="948.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vaf.stellar.installationSteps.JDKDetailsController">
    <children>
        <!-- Step Indicator Label -->
        <Label layoutX="64.0" layoutY="20.0" style="-fx-text-fill: white; -fx-font-size: 18px;" text="Step 1 of 5" />

        <!-- Box for JDK Installation Info -->
        <AnchorPane layoutX="73.0" layoutY="100.0" prefHeight="402.0" prefWidth="391.0" style="-fx-background-color: #1E1E1E; -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;">
            <children>
                <Label layoutX="90.0" layoutY="159.0" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-wrap-text: true; -fx-font-weight: 500;" text="JDK Installation and" />

                <Label layoutX="120.0" layoutY="185.0" prefHeight="27.0" prefWidth="150.0" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: 500;" text="Environment" />
                <Label layoutX="100.0" layoutY="217.0" prefHeight="18.0" prefWidth="191.0" style="-fx-text-fill: white; -fx-font-weight: 500; -fx-font-size: 22;" text="Variables Set Up" />

                <!-- Continue Button -->
                <Button fx:id="continueButton" layoutX="103.0" layoutY="342.0" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #00FFF0; -fx-text-fill: black;" text="Continue" />

                <Label layoutX="49.0" layoutY="249.0" prefHeight="18.0" prefWidth="305.0" style="-fx-text-fill: white;" text="If JDK is already installed in your system, please " />
                <Label layoutX="49.0" layoutY="267.0" prefHeight="18.0" prefWidth="258.0" style="-fx-text-fill: white;" text="continue; otherwise, install the latest JDK version" />
                <Label layoutX="49.0" layoutY="288.0" prefHeight="18.0" prefWidth="258.0" style="-fx-text-fill: white;" text="and set up the environment variables following the" />

                <!-- Hyperlink for Download JDK -->
                <Hyperlink fx:id="downloadJDKLink" layoutX="133.0" layoutY="315.0" style="-fx-text-fill: cyan; -fx-font-size: 14px; -fx-underline: true;" text="Download JDK" />

                <!-- Image for clicking -->

                <AnchorPane fx:id="webViewContainer" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" >
                    <ImageView fx:id="infoImageView" fitHeight="121.0" fitWidth="292.0" layoutX="56.0" layoutY="23.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../assets/info.png" />
                        </image>
                    </ImageView>
                    <children>
                        <WebView fx:id="webView" layoutX="56.0" layoutY="23.0" prefHeight="200.0" prefWidth="400.0" visible="false" />
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>

        <!-- Pane for embedding the media player (WebView) -->
        <AnchorPane fx:id="mediaPane" layoutX="500.0" layoutY="50.0" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: black;" />

        <ImageView fitHeight="637.0" fitWidth="403.0" layoutX="545.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/BG1.png" />
            </image>
        </ImageView>

        <ImageView fitHeight="312.0" fitWidth="326.0" layoutX="487.0" layoutY="128.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/EvaSide.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
